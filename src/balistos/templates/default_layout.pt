<!DOCTYPE html>
<html lang="en" metal:define-macro="main">

    <head>
        <meta charset="utf-8">
        <title>Balistos</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Dasilvos!">
        <meta name="author" content="Balistos">

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
          <script src="../assets/js/html5shiv.js"></script>
        <![endif]-->

        <!-- Fav and touch icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../static/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../static/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../static/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="../static/apple-touch-icon-57-precomposed.png">
        <link rel="shortcut icon" href="../static/favicon.ico">

    </head>
    <body tal:attributes="class python:econtext['view'].__name__">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Balistos</a>
                </div>
                <ul class="nav navbar-nav navbar-right" id="login-navbar">
                    <li class="dropdown  not-logged-in" tal:attributes="style python: 'display:none' if username else ''">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="login-dropdown">Login</a>
                        <div class="dropdown-menu login-menu">
                            <div id="login-message"></div>
                            <form role="form" id="login-form">
                                <input type="text" class="form-control" name="login-username" placeholder="Username" />
                                <input type="password" class="form-control" name="login-password" placeholder="Password" />
                                <button type="submit" class="btn btn-default">Login</button>
                            </form>
                      </div>
                    </li>
                    <li class="dropdown not-logged-in" tal:attributes="style python: 'display:none' if username else ''">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="register-dropdown">Register</a>
                        <div class="dropdown-menu login-menu">
                            <div id="register-message"></div>
                            <form role="form" id="register-form">
                                <input type="text" class="form-control" name="register-username" placeholder="Username" />
                                <input type="text" class="form-control" name="register-email" placeholder="Email" />
                                <input type="password" class="form-control" name="register-password" placeholder="Password" />
                                <input type="password" class="form-control" name="register-repeat" placeholder="Repeat password" />
                                <button type="submit" class="btn btn-default">Register</button>
                            </form>
                        </div>
                    </li>
                    <li class="dropdown logged-in" tal:attributes="style python: 'display:none' if not username else ''">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">You are logged in as <b id="username-string">${username}</b></a>
                        <div class="dropdown-menu">
                            <a href="/logout" class="btn btn-default">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="wrap">
            <div class="container">
                <div metal:define-slot="content" id="content" class="row" ></div>
            </div>
        </div>

        <!--/.fluid-container-->
        <div id="footer">
            <div class="container">
                <div class="copyright">2014 &copy; Balistos</div>
                <a href="http://www.youtube.com" target="_blank" class="powered-by">YouTube</a>
            </div>
        </div>
    </body>
</html>
