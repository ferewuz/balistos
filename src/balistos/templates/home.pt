<metal:block metal:use-macro="main_template">
    <div metal:fill-slot="content" id="content">
        <header>
            <div class="container">
                <h1 class="logo">Balistos</h1>
                <div class="menu">
                    <div class="menu-button border-left open-login" tal:condition="not username">Log in</div>
                    <div tal:condition="not username" class="menu-button open-register">Register</div>
                    <div class="user" tal:condition="username">
                        <img src="/static/img/user.png" />
                        <div class="text">Hello</div>
                        <div class="username">${username}4</div>
                        <div class="arrow_down"></div>
                    </div>
                </div>
                <div class="dropdown small" id="logout"  style="display:none;">
                    <a href="/logout" class="button green logout">Log Out</a>
                </div>
                <div class="dropdown" id="login"  style="display:none;">
                    <form role="form" id="login-form">
                        <label>
                            <div class="title">Username</div>
                            <div class="error" id="login-username-error"></div>
                            <input type="text" id="login-username" name="login-username">
                        </label>
                        <label>
                            <div class="title" >Password</div>
                            <div class="forgot">Forgot password?</div>
                            <input type="password" id="login-password" name="login-password">
                        </label>
                        <button type="submit" class="button green">Log In</button>
                        <div class="noaccount">No account yet? <span class="link open-register">Create one now!</span>
                        </div>
                    </form>
                    <div class="social">
                        <h2>Login with:</h2>
                        <a class="google-login" href="${request.route_url('social.auth', backend='google-oauth2')}"></a>
                        <a class="facebook-login" href="${request.route_url('social.auth', backend='facebook')}"></a>
                    </div>
                </div>
                <div class="dropdown" id="register"  style="display:none;">
                    <form role="form" id="register-form">
                        <label>
                            <div class="title">Username</div>
                            <div class="error" id="registration-username-error"></div>
                            <input type="text" id="register-username" name="register-username">
                        </label>
                        <label>
                            <div class="title">Email address</div>
                            <div class="error" id="registration-email-error"></div>
                            <input type="text" id="register-email" name="register-email">
                        </label>
                        <label>
                            <div class="title">Password</div>
                            <div class="error" id="registration-password-error"></div>
                            <input type="password" id="register-password" name="register-password">
                        </label>
                        <label>
                            <div class="title">Repeat password</div>
                            <div class="error" id="registration-repeat-error"></div>
                            <input type="password" id="register-repeat" name="register-repeat">
                        </label>
                        <button class="button green" type="submit">Register</button>
                        <div class="noaccount">Already have an account? <span class="link open-login">Log in now!</span>
                        </div>
                    </form>
                </div>
                <div class="search">
                    <input type="text" name="search" id="search-playlist" placeholder="search playlists" autocomplete="off" />
                    <ul class="results playlist_results" id="response-playlist">
                    </ul>
                </div>
            </div>
            <div class="clearfix"></div>
        </header>
        <main>
            <div class="container">
                <div class="col-lg-8 col-md-8 col-sm-12 no-gutter">
                    <div class="main_window" tal:condition="username">
                        <h2>Create new playlist</h2>
                        <form action="/create_playlist" method="POST" id="create_playlist">
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12  no-gutter">
                                <input type="text" name="title" class="title" placeholder="title">
                                <textarea type="text" name="description" placeholder="short description"></textarea>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 no-gutter">
                                <div class="settings">
                                    <h3>Settings</h3>
                                    <label>
                                        <input type="checkbox" name="public" checked="">
                                        <span class="text">Public</span>
                                    </label>
                                    <label>
                                        <input id="password_check" type="checkbox" name="playlist_protected">
                                        <span class="text">Password protected</span>
                                        <input type="text" name="playlist_password" class="small" id="playlist_password" placeholder="password" style="display: none;">
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="button green create">Create</button>
                        </form>
                    </div>
                    <div class="main_window">
                        <div>
                            <h2>What is Balistos?</h2>
                            <p>Balistos is a simple application that uses the power of YouTube to let you share your music taste with your friends or people with the same ideas. Balistos lets you add music videos you like to the common playlist, where all connected users can listen to them together and vote up the ones they like</p>
                        </div>
                        <div>
                            <h2>How do I use Balistos?</h2>
                            <p>Using Balistos is very simple. You may search all the playlists and select the one you like by simply clicking on it. To be able to use full functionality of Balistos such as adding songs and voting you are required to register an account. If you don't like any of the playlist you may also create your own and share it with your friends. If you want to make it exclusive for your friends, make sure you protect it with password.</p>
                        </div>
                    </div>
                </div>
                <div class="right-sidebar col-lg-4 col-md-4 col-sm-6 col-xs-12 left-gutter middle-gutter">
                    <div class="box first">
                        <div class="header">
                            <i class="icon note"></i>
                            <div class="title">Popular playlist</div>
                        </div>
                        <div class="body">
                            <div class="playlist_button">
                                <div class="title">Title of the playlist 3</div>
                                <div class="description">Balistos is a simple application that uses the power of YouTube to let you share your music taste with your friends or people with the same ideas.</div>
                            </div>
                            <div class="playlist_button">
                                <div class="title">Title of the playlist 3</div>
                                <div class="description">Balistos is a simple application that uses the power of YouTube to let you share your music taste with your friends or people with the same ideas.</div>
                            </div>
                            <div class="playlist_button">
                                <div class="title">Title of the playlist 3</div>
                                <div class="description">Balistos is a simple application that uses the power of YouTube to let you share your music taste with your friends or people with the same ideas.</div>
                            </div>
                            <div class="playlist_button">
                                <div class="title">Title of the playlist 3</div>
                                <div class="description">Balistos is a simple application that uses the power of YouTube to let you share your music taste with your friends or people with the same ideas.</div>
                            </div>
                            <div class="playlist_button">
                                <div class="title">Title of the playlist 3</div>
                                <div class="description">Balistos is a simple application that uses the power of YouTube to let you share your music taste with your friends or people with the same ideas.</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar col-lg-4 col-md-4 col-sm-6 col-xs-12 left-gutter" tal:condition="username">
                    <div class="box">
                        <div class="header">
                            <i class="icon note"></i>
                            <div class="title">Your latest playlist</div>
                        </div>
                        <div class="body" tal:repeat="playlist playlists">
                            <a tal:attributes="href python: '/playlist/' + str(playlist.uri)" class="playlist_button" >
                                <div class="title">${playlist.title}Title of the playlist 3</div>
                                <div class="description">${playlist.description}</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer>
            <div class="container">
                <a href="https://www.youtube.com" target="_blank" class="youtube" alt="Powered by YouTube"></a>
                <a href="/privacy" target="_blank" class="privacy">Privacy policy</a>
                <div class="copyright">&copy; Balistos 2014</div>
            </div>
        </footer>
    </div>
</metal:block>